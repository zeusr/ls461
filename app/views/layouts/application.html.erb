        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Blogs", notes_path %></li>
      </ul>
    </div>
  </header>

  <div class="container">
    <%= yield %>
  </div>

  <div class="container">
    <footer class="footer">
      &copy; 2016 Zeus, Inc.
    </footer>
  </div>
